<?xml version="1.0" encoding="utf-8" standalone="no"?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0" id="com.bpa.FastLexicon" version="0.1.0">
    <name>Miloni</name>
    <description>Personal lexicon helping to quickly learn hebrew words.</description>
    <author email="perahya@hotmail.com" href="">BPA</author>
    <!--<icon src="resources/images/ios/black_cat_ios.png"/>-->
    <icon src="resources/images/cordova_512.png"/>
    <preference name="permissions" value="none"/>
    <preference name="fullscreen" value="true"/>
    <preference name="webviewbounce" value="true"/>
    <!--<feature name="http://api.phonegap.com/1.0/file"/>
    <feature name="http://api.phonegap.com/1.0/network"/>-->
    <content src="index.html"/>
    <platform name="android">
              <icon src="resources/images/android/cordova_android_36.png" density="ldpi" />
              <icon src="resources/images/android/cordova_android_48.png" density="mdpi" />
              <icon src="resources/images/android/cordova_android_72.png" density="hdpi" />
              <icon src="resources/images/android/cordova_android_96.png" density="xhdpi" />
     </platform>
     <platform name="ios">
              <!-- iOS 7.0+ -->
              <!-- iPhone / iPod Touch  -->
              <icon src="resources/images/ios/icon-60.png" width="57" height="57" />
              <icon src="resources/images/ios/icon-60@2x.png" width="114" height="114" />
              <!-- iPad -->
              <icon src="resources/images/ios/icon-76.png" width="72" height="72" />
              <icon src="resources/images/ios/icon-76@2x.png" width="144" height="144" />              
     </platform>     
</widget>
